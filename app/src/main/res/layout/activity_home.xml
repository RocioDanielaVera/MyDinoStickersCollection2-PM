<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/bkg_user_header"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bkg_userphoto"
        android:layout_width="130dp"
        android:layout_height="119dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/img_user_default"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="326dp"
        android:layout_height="39dp"
        android:fontFamily="@font/rowdies_regular"
        android:gravity="center"
        android:text="@string/usuario"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_fullname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bkg_userphoto"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/tv_fullname"
        android:layout_width="217dp"
        android:layout_height="28dp"

        android:fontFamily="@font/afacad_bold"
        android:gravity="center"
        android:text="@string/usuario"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_bkg_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/afacad_bold"
        android:text="@string/categorias1"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button_collection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_collection"
        android:layout_width="315dp"
        android:layout_height="128dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bkg_button_collection"
        app:layout_constraintBottom_toTopOf="@+id/btn_purchase"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="315dp"
        android:layout_height="85dp"
        android:background="@drawable/bkg_user_money_tab"
        app:layout_constraintBottom_toTopOf="@+id/tv_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView000"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/afacad_bold"
        android:text="@string/dinero_disponible"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_money"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TextSizeCheck,VisualLintOverlap" />

    <TextView
        android:id="@+id/tv_user_money"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/afacad_bold"
        android:textColor="#8E8D8D"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        tools:text="Saldo: $297806.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_purchase"
        android:layout_width="315dp"
        android:layout_height="128dp"
        android:layout_marginBottom="40dp"

        android:background="@drawable/bkg_button_purchase"

        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/iv_bkg_date"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_date_id_bkg"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fullname"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_userid"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/afacad_bold"
        android:gravity="start"
        android:text="@string/id"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bkg_date"
        app:layout_constraintEnd_toStartOf="@+id/tv_userdate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_bkg_date"
        app:layout_constraintStart_toStartOf="@+id/iv_bkg_date"
        app:layout_constraintTop_toTopOf="@+id/iv_bkg_date"
        app:layout_constraintVertical_bias="0.476"
        tools:ignore="VisualLintOverlap" />

    <TextView
        android:id="@+id/tv_userdate"
        android:layout_width="146dp"
        android:layout_height="23dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/afacad_bold"
        android:gravity="end"
        android:text="@string/dd_mm_yyyy"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bkg_date"
        app:layout_constraintEnd_toEndOf="@+id/iv_bkg_date"
        app:layout_constraintStart_toEndOf="@+id/tv_userid"
        app:layout_constraintTop_toTopOf="@+id/iv_bkg_date"
        tools:ignore="TextSizeCheck" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/img_money_icon"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toStartOf="@+id/textView000"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.32"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />


</androidx.constraintlayout.widget.ConstraintLayout>